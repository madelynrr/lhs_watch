<div>
  <li>
    <div id="<%= dom_id animal %>" class="flex items-center gap-x-6 border-2 border-gray-500 p-2 rounded">
      <%= render "/animals/favorite", animal: animal %>
      <img src=<%= animal.image_url %> alt="" class="size-16 rounded-full outline-1 -outline-offset-1 outline-black/5" />
      <div>
        <h3 class="text-base/7 font-semibold tracking-tight text-gray-900"><%= animal.name %></h3>
        <p class="text-sm/6 font-semibold text-indigo-600"><%= animal.age %> year old <%= animal.gender.capitalize %> <%= animal.species.capitalize %></p>
        <p class="text-sm/6 font-semibold text-indigo-600"><%= animal.status.capitalize %></p>
      </div>
    </div>
  </li>
</div>
