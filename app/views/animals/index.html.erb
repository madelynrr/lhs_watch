<div class="bg-white py-24 sm:py-10">
  <div class="mx-auto grid max-w-7xl gap-20 px-6 lg:px-8">
    <div class="max-w-xl">
      <h2 class="text-3xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-4xl">All Animals</h2>
      <h4 class="mt-6 text-lg/8 text-gray-600">All the pretty babies!</h4>
    </div>

    <div class="grid gap-40">
      <div class="grid gap-12">
        <h3 class="text-3xl text-center font-semibold tracking-tight text-pretty text-gray-900 sm:text-4xl">Adoptable Animals!</h3>
        <ul role="list" class="grid gap-x-8 gap-y-12 grid-cols-3
        gap-y-16">
          <% @animals.adoptable.each do |animal| %>
            <div>
              <%= render animal %>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
